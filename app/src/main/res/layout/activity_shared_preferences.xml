<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SharedPreferencesActivity">

    <TextView
        android:id="@+id/sharedPreferencesTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Shared Preferences"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/numTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="Pulsa el botón..."
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/pressHereButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:text="Pulsa aquí" />

    <TextView
        android:id="@+id/favoriteAnimalTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Introduce tu animal favorito"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/favoriteAnimalEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ej. Perro, gato, etc." />

    <TextView
        android:id="@+id/animalFavTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/buttonGuardarPrefs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:text="Guardar preferencias" />

</LinearLayout>